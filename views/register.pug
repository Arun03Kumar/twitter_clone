extends ./layouts/reg-log.pug

block content
    .loginContainer 
        h1 Login 
        
        form#form(method="post", onsubmit="event.preventDefault(); validateform();")
            p #{error}  
            input(type="text", name="firstname", placeholder="first name", required="")
            input(type="text", name="lastname", placeholder="last name", required="")
            input(type="text", name="username", placeholder="user name", required="")
            input(type="email", name="email", placeholder="email", required="")
            input#p1(type="password", name="password", placeholder="password", required="")
            input#p2(type="password", name="passwordconf", placeholder="confirm password", required="")
            input#btn(type="submit", value="Log in")            
        a(href="/login") Alredy have an account. Login here.  

    script.
        const pass1 = document.querySelector('#p1')
        const pass2 = document.querySelector('#p2')
        const form = document.querySelector('#form')
        
        function validateform(){
            if(pass1.value != pass2.value){
                alert("password not matched!");
            }else{
                form.submit();
            }
        }
